%body
  .side-bar
    .header
      %h3.header__name
        = current_user.name
      %ul.header__lists
       %li.list
          = link_to new_group_path do
            = fa_icon 'pencil-square-o', class: 'icon'
        %li.list
          = link_to edit_user_path(current_user) do
            = fa_icon 'cog', class: 'icon'
  .groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
            メッセージはまだありません。
    
  .chat
    .header
      .left-header
        .left-header__title
        .left-header__menbers
          .menber
      .right-header
        Edit
  .messages
    .message
      .upper-message
        .upper-message__user-name
        .upper-message__date
            
      .lower-message
      
    .form
      .form-box
        .input-box
          %input.input-box__text{:placeholder => "type a message",:type => "text",:name => "message" }
          .input-box__image   
            <label class="input-box__image" type="file" for="message_image">
            <i class="fa fa-image"></i> 
            <input class="input-box__image__file" type="file" name="message[image]" id="message_image">
        <input type="submit" name="commit" value="Send" class="submit-btn" data-disable-with="Send">

