.message-view
  .message__uper-info
    = message.user.name
  .message__uper-info__date
    = message.created_at.strftime("%Y/%m/%d %H:%M")
  .lower-message
    - if message.content.present?
      %p.lower-message__content
        = message.content
    = image_tag message.image, class: 'lower-message__image' if message.image.present?
  

